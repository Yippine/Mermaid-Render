{
  "name": "mermaid-render-server",
  "version": "0.1.0",
  "description": "Backend API server for Mermaid Render",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.0.0",
    "@fastify/rate-limit": "^8.0.0",
    "@prisma/client": "^5.6.0",
    "bcrypt": "^5.1.0",
    "fastify": "^4.24.0",
    "jsonwebtoken": "^9.0.0",
    "langchain": "^0.3.31",
    "openai": "^4.20.0",
    "pino-pretty": "^13.1.1",
    "redis": "^4.6.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^29.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prisma": "^5.6.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
