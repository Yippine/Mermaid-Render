{
  "name": "mermaid-render",
  "version": "0.1.0",
  "private": true,
  "description": "AI-driven customizable graph visualization platform",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "server": "cd server && npm start",
    "server:dev": "cd server && npm run dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test --config config/testing/playwright.config.ts",
    "prepare": "husky install",
    "husky:install": "husky install",
    "docker:dev": "docker-compose -f config/docker/docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f config/docker/docker-compose.dev.yml down",
    "docker:full": "docker-compose -f config/docker/docker-compose.yml up",
    "docker:full:down": "docker-compose -f config/docker/docker-compose.yml down"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tanstack/react-query": "^4.35.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cytoscape": "^3.26.0",
    "elkjs": "^0.8.2",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.294.0",
    "monaco-editor": "^0.52.2",
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwind-merge": "^2.0.0",
    "typescript": "^5.0.0",
    "zod": "^3.22.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/cytoscape": "^3.19.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "lint-staged": "^15.0.0",
    "playwright": "^1.40.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
